<Window x:Class="UsingDecorators.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsingDecorators"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border BorderThickness="10 5 20 3"
            BorderBrush="red"
            CornerRadius="20 30 0 0">
        <Viewbox Margin="10">
            <Canvas Width="200"
                Height="200"
                Background="LightBlue">
            <Button Canvas.Left="50"
                    Canvas.Top="125"
                    Panel.ZIndex="100"
                    Width="100"
                    Height="35"/>
            <Button Canvas.Right="25"
                    Height="200"
                    Width="35" />
            <Button Canvas.Bottom="5"
                    Height="20"
                    Width="75"/>

            </Canvas>
        </Viewbox>
    </Border>
</Window>
